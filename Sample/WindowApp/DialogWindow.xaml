<wpf:BaseDialog
    x:Class="WindowApp.DialogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WindowApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:MvvmToolkit.Windowing.WPF;assembly=MvvmToolkit.Windowing.WPF"
    Title="DialogWindow"
    Width="800"
    Height="450"
    x:TypeArguments="local:DialogResult"
    mc:Ignorable="d">
    <Grid >
        <TextBox HorizontalAlignment="Left" Margin="243,196,0,0" Text="{Binding Name}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    </Grid>
</wpf:BaseDialog>
